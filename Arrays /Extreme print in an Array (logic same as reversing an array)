#include <iostream>
using namespace std;
void reverse(int arr[],int n){
    int start =0;
    int end=n-1;
    while(start<=end){
        cout<<arr[start]<<" "<<arr[end]<<" ";
        start++;
        end--;       
    }
    cout<<endl;
}
int main()
{
    int arr[6]={1,4,0,5,-2,15};
    int brr[5]={2,6,3,9,4};
    reverse(arr,6);
    reverse(brr,5);  
    return 0;
}
OUTPUT:
1 15 4 -2 0 5 
2 4 6 9 3 3 
